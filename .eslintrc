{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "indent": [2, 2, { "VariableDeclarator": 2 }],
    "one-var": [2, "never"],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true
  }
}
